<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="demo.zPayment.controller.ViewPdf"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Payment Receipt" navButtonPress="_onNavBack" showNavButton="true">
				<content>
					<PDFViewer source="{/Source}" title="{/Title}" height="{/Height}">
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</PDFViewer>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>